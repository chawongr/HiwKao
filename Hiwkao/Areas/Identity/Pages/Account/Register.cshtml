@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="index.css">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'poppins',sans-serif;
        }

        section {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            width: 100%;
            background-color: black;
            background: url("https://cdn.discordapp.com/attachments/1100176710722392094/1100866217507557556/IMG_0101.JPG")no-repeat;
            background-position: center;
            background-size: cover;

        }

        .form-box {
            position: relative;
            width: 100vw;
            height: 100vh;
            background: transparent;
            background-color: rgba(0,0,0,0);
            -webkit-backdrop-filter: blur(70px);
            backdrop-filter: blur(70px);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-value { /* Fallback color */
            background-color: rgba(198, 198, 198, 0.15);
            height: 92%;
            width: 40%;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 20px;
        }

        h2 {
            font-size: 1.5em;
            color: #000;
            text-align: center;
        }

        .inputbox {
            position: relative;
            margin: 0.83rem 0;
            width: 20em;
            border-bottom: 2px solid black;
            font-size: 1rem;
        }

            .inputbox label {
                position: absolute;
                top: 50%;
                left: 5px;
                transform: translateY(-50%);
                color: #000;
                font-size: 1em;
                pointer-events: none;
                transition: .5s;
            }

        input:focus ~ label,
        input:valid ~ label {
            top: -5px;
        }

        .inputbox input {
            width: 100%;
            height: 45px;
            background: transparent;
            border: none;
            outline: none;
            font-size: 1em;
            padding: 0 3.5px 0px 5px;
            color: #000;
        }

        .inputbox ion-icon {
            position: absolute;
            right: 8px;
            color: #000;
            font-size: 1.2em;
            top: 20px;
        }

        .form-label {
            font-size: 1.1rem;
        }

        button {
            margin-top: 0.1rem;
            width: 100%;
            height: 1.8rem;
            border-radius: 40px;
            background: #000;
            color: white;
            border: none;
            outline: none;
            cursor: pointer;
            font-size: 0.8em;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        a {
            text-decoration: none;
            font-size: 1.1rem;
        }

        .form-control {
            margin-top: 0.2rem;
        }

        @@media (min-width: 768px) and (max-width: 1022px) and (min-height:300px) {
            .form-value { /* Fallback color */
                background-color: rgba(198, 198, 198, 0.15);
                height: 78%;
                width: fit-content;
                padding: 0 2rem;
                display: flex;
                justify-content: center;
                align-items: start;
                border-radius: 20px;
            }

            h2 {
                margin-top: 1em;
                font-size: 6em;
                color: #000;
                text-align: center;
                margin-bottom: 1.5em;
            }

            .inputbox {
                position: relative;
                margin: 2rem 0;
                width: 16em;
                border-bottom: 2px solid black;
                font-size: 2rem;
            }

                .inputbox label {
                    position: absolute;
                    top: 50%;
                    left: 5px;
                    transform: translateY(-50%);
                    color: #000;
                    font-size: 1em;
                    pointer-events: none;
                    transition: .5s;
                }

                .inputbox ion-icon {
                    position: absolute;
                    color: #000;
                    font-size: 1.2em;
                    top: 0%;
                }

            .form-label {
                font-size: 1.8rem;
            }

                .form-label .largesq {
                    transform: scale(2.2);
                    margin-right: 1rem;
                }

            a {
                text-decoration: none;
                font-size: 2rem;
            }

            button {
                margin-top: 5%;
                width: 100%;
                height: 3.5rem;
                border-radius: 40px;
                background: #000;
                color: white;
                border: none;
                outline: none;
                cursor: pointer;
                font-size: 1.8em;
                font-weight: 600;
                margin-bottom: 2rem;
            }

            .form-control {
                font-size: 1.5rem;
            }
        }

.profilelabel {
    display: inline-block;
    cursor: pointer;
    text-align: center;
}
    </style>
</head>

<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                    <h2 class>Register</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="inputbox">
                        <ion-icon name="person-outline"></ion-icon>
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" required />
                        <label asp-for="Input.FirstName">FirstName</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="people-outline"></ion-icon>
                        <input  asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" required />
                        <label asp-for="Input.LastName">LastName</label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input type="email" asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" required />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input asp-for="Input.Password" class="form-control" autocomplete="off" aria-required="true" required />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="checkmark-circle-outline"></ion-icon>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="off" aria-required="true" required />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="call-outline"></ion-icon>
                        <input asp-for="Input.Phonenumber" class="form-control" autocomplete="off" aria-required="true" required />
                        <label asp-for="Input.Phonenumber">Phone number</label>
                        <span asp-validation-for="Input.Phonenumber" class="text-danger"></span>
                    </div>
                    <input type="file" id="profilePictureInput" accept=".png,.jpg,.jpeg,.gif,.tif" asp-for="Input.ProfilePicture" class="form-control" style="display: none" onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" required/>
                    <div style="text-align: center;">
                        <label for="profilePictureInput">
                            <img src="~/images/ProfilePicture.webp" alt="Profile Picture" id="profilePicture" style="width: 100px; height: 100px; border-radius: 50%;">
                        </label>
                    </div>
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

