@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'poppins',sans-serif;
        }


        section {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            width: 100%;
            background-color: black;
            background: url("https://cdn.discordapp.com/attachments/1100176710722392094/1100866217507557556/IMG_0101.JPG")no-repeat;
            background-position: center;
            background-size: cover;
        }

        .form-box {
            position: relative;
            width: 100vw;
            height: 100vh;
            background: transparent;
            background-color: rgba(0,0,0,0);
            -webkit-backdrop-filter: blur(70px);
            backdrop-filter: blur(70px);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-value { /* Fallback color */
            background-color: rgba(198, 198, 198, 0.15);
            height: 70%;
            width: 35%;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 20px;
        }

        h2 {
            font-size: 2em;
            color: #000;
            text-align: center;
        }

        .inputbox {
            position: relative;
            margin: 2rem 0;
            width: 16em;
            border-bottom: 2px solid black;
            font-size: 1rem;
        }

            .inputbox label {
                position: absolute;
                top: 50%;
                left: 5px;
                transform: translateY(-50%);
                color: #000;
                font-size: 1em;
                pointer-events: none;
                transition: .5s;
            }

        input:focus ~ label,
        input:valid ~ label {
            top: -5px;
        }

        .inputbox input {
            width: 100%;
            height: 50px;
            background: transparent;
            border: none;
            outline: none;
            font-size: 1em;
            padding: 0 35px 0 5px;
            color: #000;
        }

        .inputbox ion-icon {
            position: absolute;
            right: 8px;
            color: #000;
            font-size: 1.2em;
            top: 20px;
        }

        .form-label {
            font-size: 1.1rem;
        }

        button {
            margin-top: 5%;
            width: 100%;
            height: 2rem;
            border-radius: 40px;
            background: #000;
            color: white;
            border: none;
            outline: none;
            cursor: pointer;
            font-size: 1em;
            font-weight: 600;
            margin-bottom: 2rem;
        }

        .forget {
            margin: -15px 0 15px;
            font-size: .9em;
            color: #000;
            display: flex;
            justify-content: space-between;
        }

            .forget label input {
                margin-right: 3px;
            }

            .forget label a {
                color: #000;
                text-decoration: none;
            }

                .forget label a:hover {
                    text-decoration: underline;
                }

        .register {
            padding: 1vh;
        }

        .reg {
            padding-bottom: 1vh;
            font-size: .9em;
            color: #000;
            text-align: center;
            font-weight: 300;
        }


            .reg:hover {
                text-decoration: underline;
            }

        a {
            text-decoration: none;
            font-size: 1.1rem;
        }

        @@media (min-width: 768px) and (max-width: 1022px) and (min-height:300px) {
            .form-value { /* Fallback color */
                background-color: rgba(198, 198, 198, 0.15);
                height: 60%;
                width: fit-content;
                padding: 0 4rem 0 4rem;
                display: flex;
                justify-content: center;
                align-items: start;
                border-radius: 20px;
            }

            h2 {
                margin-top: 1em;
                font-size: 6em;
                color: #000;
                text-align: center;
                margin-bottom: 1.5em;
            }

            .inputbox {
                position: relative;
                margin: 2rem 0;
                width: 16em;
                border-bottom: 2px solid black;
                font-size: 2rem;
            }

                .inputbox label {
                    position: absolute;
                    top: 50%;
                    left: 5px;
                    transform: translateY(-50%);
                    color: #000;
                    font-size: 1em;
                    pointer-events: none;
                    transition: .5s;
                }

                .inputbox ion-icon {
                    position: absolute;
                    color: #000;
                    font-size: 1.2em;
                    top: 0%;
                }

            .form-label {
                font-size: 1.8rem;
            }

                .form-label .largesq {
                    transform: scale(2.2);
                    margin-right: 1rem;
                }

            a {
                text-decoration: none;
                font-size: 2rem;
            }

            button {
                margin-top: 5%;
                width: 100%;
                height: 4rem;
                border-radius: 40px;
                background: #000;
                color: white;
                border: none;
                outline: none;
                cursor: pointer;
                font-size: 2em;
                font-weight: 600;
                margin-bottom: 2rem;
            }
        }
    </style>
</head>

<body>

    <section>
        <div class="form-box">
            <div class="form-value ">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <h2>Login</h2>

                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" required />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>


                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input asp-for="Input.Password" class="form-control" autocomplete="off" aria-required="true" required />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="forget checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input type="checkbox" asp-for="Input.RememberMe" class="largesq" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    <div class="register">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> <p class="reg">Register as a new user </p></a>
                    </div>


                </form>
            </div>

        </div>


    </section>
</body>
</html>